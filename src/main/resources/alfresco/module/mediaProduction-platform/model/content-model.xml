	<!-- =============================================================================================================== 
		Constraints, Types, and Aspects go here... -->
	<constraints>
		<constraint name="contract:contractApprovalStatusConstraint"
			type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<!-- Empty for default search -->
					<value>APPROVED</value>
					<value>NOT APPROVED</value>
				</list>
			</parameter>
		</constraint>

		<constraint name="nvp:PAYEStatusOptions" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<!-- Empty for default search -->
					<value>PAYE</value>
					<value>Self Employed</value>
				</list>
			</parameter>
		</constraint>

		<constraint name="contract:partyPositionConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<!-- Empty for default search -->
					<value>PENDING</value>
					<value>NEGOTIATION</value>
					<value>AGREED</value>
					<value>DECLINED</value>
				</list>
			</parameter>
		</constraint>

		<constraint name="contract:partyRoleConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<!-- Empty for default search -->
					<value>SERVICE PROVIDER</value>
					<value>SERVICE RECIPIENT</value>
					<value>LEGAL SERVICE</value>
				</list>
			</parameter>
		</constraint>

		<constraint name="contract:contractDeliverableTypeConstraint"
			type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>SERVICE</value>
					<value>PRODUCT</value>
				</list>
			</parameter>
		</constraint>

		<constraint name="contract:contractCurrencyConstraint"
			type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>GBP</value>
					<value>EUR</value>
					<value>USD</value>
					<value>AUS</value>
					<value>KRN</value>
				</list>
			</parameter>
		</constraint>

		<constraint name="contract:periodSpecifierConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>Milestone</value>
					<value>Daily</value>
					<value>Weekly</value>
					<value>Monthly</value>
				</list>
			</parameter>
		</constraint>

		<constraint name="contract:ratePeriodConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>per hour</value>
					<value>per day</value>
					<value>per week</value>
					<value>per month</value>
					<value>fixed price contract</value>
				</list>
			</parameter>
		</constraint>
		
		<constraint name="contract:yesNoConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>NO</value>
					<value>YES</value>
				</list>
			</parameter>
		</constraint>

        <constraint name="contract:yesNoConstraint1" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>no</value>
					<value>yes</value>
				</list>
			</parameter>
		</constraint>
		
		<constraint name="contract:workingWeekConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>Five (5) days per week</value>
					<value>Six (6) days per week</value>
					<value>Eleven (11) days per fortnight</value>
				</list>
			</parameter>
		</constraint>

		<constraint name="contract:identityDocumentTypeConstraint"
			type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>Passport</value>
					<value>Drivers Licence</value>
				</list>
			</parameter>
		</constraint>
		
		<constraint name="contract:workflowNameConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>Contract management process</value>
					<value>Simple reminder</value>
					<value>Manual process</value>
				</list>
			</parameter>
		</constraint>
		
		<constraint name="contract:contractAdministrationTeamConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>Contracts admin team</value>
				</list>
			</parameter>
		</constraint>
		
		
	</constraints>

	<types>

		<type name="nvpList:productionRoleType">
			<title>Production Roles Types</title>
			<description>A list of default role types, charge codes, PAYE status and a link to the template contract</description>
			<parent>dl:dataListItem</parent>
			<properties>
				<property name="nvpList:typeName">
					<title>Role Type</title>
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
				</property>
				<property name="nvpList:typeDescription">
					<title>Role description</title>
					<description>A description of role responsibilities and how executed</description>
					<type>d:text</type>
				</property>
				<property name="nvpList:typeDeliverableType">
					<title>Deliverable type</title>
					<description>The type of deliverable provided by this role</description>
					<type>d:text</type>
					<constraints>
						<constraint ref="contract:contractDeliverableTypeConstraint" />
					</constraints>
				</property>
				<property name="nvpList:typeChargeCode">
					<title>Charge code</title>
					<description>General ledger charge code this role is booked to</description>
					<type>d:text</type>
				</property>
				<property name="nvpList:typePAYEStatus">
					<title>PAYE status</title>
					<description>The PAYE status for this role</description>
					<type>d:text</type>
					<constraints>
						<constraint ref="nvp:PAYEStatusOptions" />
					</constraints>
				</property>
				<property name="nvpList:typeWorkingWeek">
					<title>Working week</title>
					<description>The days in a week expected to work</description>
					<type>d:text</type>
					<constraints>
						<constraint ref="contract:workingWeekConstraint" />
					</constraints>
				</property>
				<property name="nvpList:typeBudgetMin">
					<title>Minimum Budget</title>
					<description>The minimum budget expected to pay</description>
					<type>d:int</type>
				</property>
				<property name="nvpList:typeBudgetMax">
					<title>Maximum Budget</title>
					<description>The maximum budget expected to pay</description>
					<type>d:int</type>
				</property>
				<property name="nvpList:typePaymentPeriod">
					<title>Payment period</title>
					<description>The frequency the role is paid</description>
					<type>d:text</type>
					<constraints>
						<constraint ref="contract:periodSpecifierConstraint" />
					</constraints>
				</property>
				<property name="nvpList:typeRatePeriod">
					<title>Rate period</title>
					<description>The period the contract rate applies to</description>
					<type>d:text</type>
					<constraints>
						<constraint ref="contract:ratePeriodConstraint" />
					</constraints>
				</property>
				<property name="nvpList:typeCurrency">
					<title>Currency</title>
					<description>Currency role is paid in</description>
					<type>d:text</type>
					<constraints>
						<constraint ref="contract:contractCurrencyConstraint" />
					</constraints>
				</property>
				<property name="nvpList:typeProcessName">
					<title>Management Process</title>
					<description>The name of the workflow process which is used to manage this type of role</description>
					<type>d:text</type>
					<constraints>
						<constraint ref="contract:workflowNameConstraint" />
					</constraints>
				</property>
				<property name="nvpList:typeAdministrationTeam">
					<title>Administration team</title>
					<description>The team who will manage this contract type to completion</description>
					<type>d:text</type>
					<constraints>
						<constraint ref="contract:contractAdministrationTeamConstraint" />
					</constraints>
				</property>
				<property name="nvpList:typeCategory">
					<title>categories</title>
					<description>A comma separated list of categories which this role type is present in</description>
					<type>d:text</type>
				</property>
			</properties>
			<associations>
				<association name="nvpList:contractTemplate">
					<title>Contract Template</title>
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>contract:contractTemplate</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>




		<!-- A party who signs a contract -->
		<type name="contract:party">
			<title>Contract Party</title>
			<description>An instance of a party who is engaged in contractual negotiation</description>
			<parent>sys:base</parent>
			<properties>
				<property name="contract:signDate">
					<title>Date party signs document</title>
					<type>d:date</type>
				</property>
				<property name="contract:contractPosition">
					<title>Contract position</title>
					<description>The position this party has taken on the contract relating to the agreement of the contract</description>
					<type>d:text</type>
					<constraints>
						<constraint ref="contract:partyPositionConstraint" />
					</constraints>
				</property>
				<property name="contract:contractRole">
					<title>Contract Role</title>
					<description>Role of party relating to contract</description>
					<type>d:text</type>
					<constraints>
						<constraint ref="contract:partyRoleConstraint" />
					</constraints>
				</property>
			</properties>
			<associations>
				<association name="contract:partyPerson">
					<title>Person</title>
					<description>The person who is taking part in the contract</description>
					<source>
						<mandatory>true</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>cm:person</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
				<!-- association name="contract:partyOrganisation"> <title>Represented 
					Organisation</title> <description>The organisation which the person represents 
					in the contract</description> <source> <mandatory>false</mandatory> <many>true</many> 
					</source> <target> <class>nvp:organisation</class> <mandatory>false</mandatory> 
					<many>false</many> </target> </association -->
			</associations>
		</type>


		<type name="contract:contractContainer">
			<title>Contract Container</title>
			<description>A container which contains content which has the contract aspect</description>
			<parent>cm:folder</parent>
			<mandatory-aspects>
				<aspect>sys:undeletable</aspect>
				<aspect>sys:unmovable</aspect>
			</mandatory-aspects>
		</type>
		
        <type name="prod:crewContainer">
			<title>Crew Container</title>
			<description>A container which contains folders for crew members</description>
			<parent>cm:folder</parent>
			<mandatory-aspects>
				<aspect>sys:undeletable</aspect>
				<aspect>sys:unmovable</aspect>
			</mandatory-aspects>
		</type>
		
		<type name="contract:contractTemplateContainer">
			<title>Contract Template Container</title>
			<description>A container which contains the template contracts for a production</description>
			<parent>cm:folder</parent>
			<mandatory-aspects>
				<aspect>sys:undeletable</aspect>
				<aspect>sys:unmovable</aspect>
			</mandatory-aspects>
		</type>
		
		<type name="nvpList:productionRole">
			<title>Production Role</title>
			<parent>dl:dataListItem</parent>
			<properties>
				<property name="nvpList:roleType">
					<title>Role Type</title>
					<description></description>
					<type>d:text</type>
				</property>
				<property name="nvpList:roleName">
					<title>Role Title</title>
					<type>d:text</type>
				</property>
				<property name="nvpList:roleDescription">
					<title>Role Description</title>
					<type>d:text</type>
				</property>
				<property name="nvpList:createdDate">
					<title>Date created</title>
					<type>d:date</type>
				</property>
				<property name="nvpList:offerDate">
					<title>Date role offered</title>
					<type>d:date</type>
				</property>
				<property name="nvpList:acceptDate">
					<title>Date role accepted</title>
					<type>d:date</type>
				</property>
				<property name="nvpList:roleStatus">
					<title>Current status of role</title>
					<type>d:text</type>
				</property>
				<property name="nvpList:chargeCode">
					<title>Charge code this role is assigned to in finance platform</title>
					<type>d:text</type>
				</property>
				<property name="nvpList:PAYEStatus">
					<title>The PAYE status for this role</title>
					<type>d:text</type>
					<constraints>
						<constraint ref="nvp:PAYEStatusOptions" />
					</constraints>
				</property>
				<property name="nvpList:contractProcessId">
					<title>The process id of the Activiti process instance which is managing the contract</title>
					<type>d:text</type>
				</property>
				<property name="nvpList:startDate">
					<title>Start date</title>
					<type>d:date</type>
				</property>
				<property name="nvpList:endDate">
					<title>End date</title>
					<type>d:date</type>
				</property>
				<property name="nvpList:ratePeriod">
					<title>The period the contract value applies to, e.g. hourly, daily, weekly, pa.a</title>
					<type>d:text</type>
				</property>
				<property name="nvpList:paymentPeriod">
					<title>The period the payment to the provider is made on</title>
					<type>d:text</type>
				</property>
				<property name="nvpList:budgetMin">
					<title>The minimum budget expected to pay</title>
					<type>d:int</type>
				</property>
				<property name="nvpList:budgetMax">
					<title>The maximum budget expected to pay</title>
					<type>d:int</type>
				</property>
				<property name="nvpList:totalBudgetMin">
					<title>The minimum budget expected to pay</title>
					<type>d:int</type>
				</property>
				<property name="nvpList:totalBudgetMax">
					<title>The maximum budget expected to pay</title>
					<type>d:int</type>
				</property>
				<property name="nvpList:totalContractsAmount">
					<title>The maximum budget expected to pay</title>
					<description>The total amount of all the contracts which have been agreed to fulfill this crew position.  Takes into account that different people may fulfill this role over the period of the production</description>
					<type>d:float</type>
				</property>
				<property name="nvpList:roleCategory">
					<title>category</title>
					<description>A single category this role instance is a member of</description>
					<type>d:text</type>
				</property>
			</properties>
			<associations>
				<association name="nvpList:assignee">
					<title>Assignee</title>
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>cm:person</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<association name="nvpList:roleContractDocuments">
					<title>Contract Document</title>
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>contract:contractDocument</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</type>
		<type name="contract:servicePeriod">
			<title>Service Period</title>
			<description>An aspect which can be applied to any node which relates to services being supplied or activities taking place between a start and stop date</description>
			<parent>cm:cmobject</parent>
			<properties>
			    <property name="contract:servicePeriodId">
					<title>Service Name</title>
					<description>The name of the service which is being provided</description>
					<type>d:text</type>
				</property>
				<property name="contract:servicePeriodName">
					<title>Service Name</title>
					<description>The name of the service which is being provided</description>
					<type>d:text</type>
				</property>
				<property name="contract:servicePeriodDescription">
					<title>Service Description</title>
					<description>A description of the service being provided to add details and clarity to the contract</description>
					<type>d:text</type>
				</property>
				<property name="contract:serviceTypeCode">
					<title>Service Type Code</title>
					<description>The type of serviceperiod.  PRODUCTION_PERIOD | ENGAGEMENT_PERIOD</description>
					<type>d:text</type>
				</property>
				<property name="contract:servicePeriodType">
					<title>Service Type Code</title>
					<description>A sub type of the service type code. For ENGAGEMENT_PERIOD we have 'SpecificDate', 'Period', 'UntilTerminated'</description>
					<type>d:text</type>
				</property>
				<property name="contract:serviceStart">
					<title>Service Start Date</title>
					<description>The datetime which the service will start on</description>
					<type>d:date</type>
				</property>
				<property name="contract:serviceEnd">
					<title>Service End Date</title>
					<description>The datetime which the service will start on</description>
					<type>d:date</type>
				</property>
			</properties>
		</type>
	</types>

