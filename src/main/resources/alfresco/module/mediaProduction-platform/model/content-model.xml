		<aspect name="contract:rightToWork">
			<title>Identifies an individuals right to work</title>
			<description>An aspect which describes the details of an employable person</description>
			<properties>
				<property name="contract:dateOfBirth">
					<title>Date of birth</title>
					<type>d:date</type>
				</property>
				<property name="contract:townOfBirth">
					<title>Town of birth</title>
					<type>d:text</type>
				</property>
				<property name="contract:countryOfBirth">
					<title>Country of birth</title>
					<type>d:text</type>
				</property>
